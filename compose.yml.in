name: codimd

services:
  codimd:
    container_name: codimd
    hostname: codimd
    image: nabo.codimd.dev/hackmdio/hackmd:2.6.1
    environment:
      - CMD_DB_URL=postgres://codimd:${POSTGRES_PASSWORD}@database/codimd
    env_file: .env
    depends_on:
      - database
    volumes:
      - upload-data:/home/hackmd/app/public/uploads
    restart: always

  database:
    container_name: codimd-database
    hostname: codimd-database
    image: postgres:11.6-alpine
    environment:
      - POSTGRES_USER=codimd
      - POSTGRES_DB=codimd
    env_file: .env
    volumes:
      - database-data:/var/lib/postgresql/data
    restart: always

  rproxy:
    image: nginx:alpine-slim
    restart: always
    ports:
      #- 80:80
      - __CODIMD_HTTPS_PORT__:443
    volumes:
      - ./nginx.conf.d:/etc/nginx/conf.d
      - ./ssl:/etc/ssl:ro
    init: true

  plantuml:
    container_name: codimd-plantuml
    hostname: codimd-plantuml
    image: plantuml/plantuml-server:jetty
    restart: always

volumes:
  database-data: {}
  upload-data: {}
